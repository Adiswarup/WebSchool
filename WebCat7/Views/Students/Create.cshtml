@model SchMod.Models.Studs.Students

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Students</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="form-group col-md-3">
                <label asp-for="StdName" class="control-label"></label>
            </div>
            <div class="form-group col-md-4">
                @Html.EditorFor(model => model.StdName, new { htmlAttributes = new { @class = "form-control" } })
                @*<input asp-for="StdName" class="form-control col-md-4" />*@
                <span asp-validation-for="StdName" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-3">
                <label asp-for="Sex" class="control-label"></label>
            </div>
            <div class="form-group col-md-4">
                @Html.DropDownList("Sex", new List<SelectListItem> {
                    new SelectListItem {Text="Boy",Value ="Boy"},
                    new SelectListItem {Text="Girl",Value ="Girl"},
                    new SelectListItem {Text="Not Known",Value ="UnKnown"}
                    }, "Select Gender")
                <span asp-validation-for="Sex" class="text-danger"></span>
            </div>
        </div>
        @*<div class="form-group">
                @Html.LabelFor(model => model.Dob, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Dob, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Dob, "", new { @class = "text-danger" })
                </div>
            </div>*@

        <div class="row">
            <div class="form-group col-md-3">
                <label asp-for="Dob" class="control-label"></label>
            </div>
            <div class="form-group col-md-4">
                <input type="date" asp-for="Dob" asp-format="{0:dd/MM/yyyy}" class="form-control" />
                <span asp-validation-for="Dob" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-3">
            <label asp-for="ParentsNamesF" class="control-label"></label>
        </div>
        <div class="form-group col-md-4">
            <input asp-for="ParentsNamesF" class="form-control" />
            <span asp-validation-for="ParentsNamesF" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-3">
            <label asp-for="PresentClass" class="control-label"></label>
        </div>
        <div class="form-group col-md-4">
            @*<input asp-for="PresentClass" class="form-control" />*@
            @Html.DropDownListFor(model => model.PresentClass, (SelectList)ViewBag.schClsLst)
            <span asp-validation-for="PresentClass" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-3">
            <label asp-for="StdCategory" class="control-label"></label>
        </div>
        <div class="form-group col-md-4">
            @Html.DropDownList("Category", new List<SelectListItem> {
                            new SelectListItem {Text="General",Value ="General"},
                            new SelectListItem {Text="OBC1",Value ="OBC1"},
                            new SelectListItem {Text="OBC2/EBC",Value ="OBC2/EBC"},
                            new SelectListItem {Text="SC",Value ="SC"},
                            new SelectListItem {Text="ST",Value ="ST"},
                            new SelectListItem {Text="PH",Value ="PH"}
                            }, "Select Category")
            <span asp-validation-for="StdCategory" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-3">
            <label asp-for="EmailAddress" class="control-label"></label>
        </div>
        <div class="form-group col-md-4">
            <input asp-for="EmailAddress" class="form-control" />
            <span asp-validation-for="EmailAddress" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-3">
            <label asp-for="ConPhone" class="control-label"></label>
        </div>
        <div class="form-group col-md-4">
            <input asp-for="ConPhone" class="form-control" />
            <span asp-validation-for="ConPhone" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-3">
            <label asp-for="StdGenCategory" class="control-label"></label>
        </div>
        <div class="form-group col-md-4">
            @Html.DropDownListFor(model => model.StdGenCategory, (SelectList)ViewBag.SchFeeCatLst)
            <span asp-validation-for="StdGenCategory" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4"></div>
        <div class="form-group col-md-3 ">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</form>

<div>
    <a asp-controller="SearchStd" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
