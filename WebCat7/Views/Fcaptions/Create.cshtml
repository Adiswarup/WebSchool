@model SchMod.Models.StdFees.Fcaption

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Fcaption</h4>
<hr />
<div class="row">
    <div class="form-group col-md-9">
        @ViewBag.Remark;
        <br />
    </div>
</div>
<div>
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="FeeNameId" />
        <div class="row">
            <div class="form-group col-md-3">
                <label asp-for="FeeCaption" class="control-label"></label>
            </div>
            <div class="form-group col-md-2">
                <input asp-for="FeeCaption" class="form-control" />
                <span asp-validation-for="FeeCaption" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-3">
                <label asp-for="FeeDuration" class="control-label"></label>
            </div>
            <div class="form-group col-md-2">
                @Html.DropDownList("FeeDuration", new List<SelectListItem> {
                    new SelectListItem {Text="Monthly",Value ="Monthly"},
                    new SelectListItem {Text="Quaterly",Value ="Quaterly"},
                    new SelectListItem {Text="Half Yearly",Value ="Half Yearly"},
                    new SelectListItem {Text="Annually",Value ="Annually"}
                }, "Select Periodicity")
                <span asp-validation-for="FeeDuration" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-3">
                <label asp-for="FeeType" class="control-label"></label>
            </div>
            <div class="form-group col-md-2">
                <input asp-for="FeeType" class="form-control" />
                <span asp-validation-for="FeeType" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-3">
                <label asp-for="FeeOrder" class="control-label"></label>
            </div>
            <div class="form-group col-md-2">
                <input asp-for="FeeOrder" class="form-control" />
                <span asp-validation-for="FeeOrder" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-3">
                <label asp-for="ShowIt" class="control-label"></label>
            </div>
            <div class="form-group col-md-2">
                <input asp-for="ShowIt" class="form-control" />
                <span asp-validation-for="ShowIt" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3"></div>
            <div class="form-group col-md-3 ">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </form>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

